@model ProductInCategory

<div class="container text-center">
    <h1>@ViewBag.CategoryWithProducts.Name</h1>
    <div class="row">
        <div class="col-md border shadow p-3 mr-2">
            <h2>Products</h2>
            <ul class="list-group list-group-flush">
                @foreach (ProductInCategory product in ViewBag.CategoryWithProducts.Products)
                {
                    <li class="list-group-item">@product.Product.Name</li>
                }
            </ul>
        </div>
        <div class="col-md-5 border shadow p-3">
            <p>Add Product</p>
            <form asp-controller="Categories" asp-action="AddProduct" asp-route-categoryId=@ViewBag.CategoryWithProducts.CategoryId>
                <select asp-for="ProductId" class="form-control">
                    @foreach (Product product in ViewBag.ProductsNotInCategory)
                    {
                        <option value="@product.ProductId">@product.Name</option>
                    }
                </select>
                <button class="btn btn-success mt-3">Add</button>
            </form>
        </div>
    </div>
</div>