@{
    ViewData["Title"] = "Home Page";
}
@model Product

<div class="container text-center">
    <h1>Products</h1>
    <div class="row">
        <div class="col-md border shadow p-3 mr-2">
            <h2>New Product</h2>
            <form asp-controller="Products" asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <input asp-for="Name" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                    <input asp-for="Price" class="form-control">
                </div>
                <button class="btn btn-outline-success">Create</button>
            </form>
        </div>
        <div class="col-md border shadow p-3">
            <h2>Existing Products</h2>
            <ul class="list-group list-group-flush">
                @foreach (Product product in ViewBag.AllProducts)
                {
                    <li class="list-group-item"><a asp-controller="Products" asp-action="Show" asp-route-productId="@product.ProductId">@product.Name</a></li>
                }
            </ul>
        </div>
    </div>
</div>