@model ProductInCategory

<div class="container text-center">
    <h1>@ViewBag.ProductWithCategories.Name</h1>
    <div class="row">
        <div class="col-md border shadow p-3 mr-2">
            <h2>Categories</h2>
            <ul class="list-group list-group-flush">
                @foreach (ProductInCategory category in ViewBag.ProductWithCategories.Categories)
                {
                    <li class="list-group-item">@category.Category.Name</li>
                }
            </ul>
        </div>
        <div class="col-md-5 border shadow p-3">
            <p>Add Category</p>
            <form asp-controller="Products" asp-action="AddCategory" asp-route-productId="@ViewBag.ProductWithCategories.ProductId" method="post">
                <select asp-for="CategoryId" class="form-control">
                    @foreach (Category category in ViewBag.categoriesWithoutProduct)
                    {
                        <option value="@category.CategoryId">@category.Name</option>
                    }
                </select>
                <button class="btn btn-success mt-3">Add</button>
            </form>
        </div>
    </div>
</div>